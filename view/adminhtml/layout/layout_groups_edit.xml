<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
    </head>
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="OuterEdge\Layout\Block\Adminhtml\Groups\Edit" name="layout_groups_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="OuterEdge\Layout\Block\Adminhtml\Groups\Edit\Tabs" name="layout_groups_edit_tabs">
                <block class="OuterEdge\Layout\Block\Adminhtml\Groups\Edit\Tab\Main" name="layout_groups_edit_tab_main"/>
                <block class="OuterEdge\Layout\Block\Adminhtml\Elements" name="layout_elements_grid"/>
                 <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">layout_groups_edit_tab_main</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">elements_section</argument>
                    <argument name="block" xsi:type="string">layout_elements_grid</argument>
                </action>
            </block>
        </referenceContainer>

    </body>
</page>